@import '../../common/common.wxss';

.banner image{
    width: 100%;
    height: 500rpx;
}
.list-box{
    padding: 30rpx 20rpx;
}
.newest-list{
  display: inline-block;
  width: 340rpx;
  height: 340rpx;
  margin:0 20rpx 20rpx 0;
  border-radius: 10px;
  text-align: center;
  background: #ffffff;
  border: 1rpx solid #850516;
}
.newest-list:nth-child(2n){
    margin-right: 0;
}
.newest-list image{
    width: 230rpx;
    height: 230rpx;
}
.newest-list .newest-text{
    font-size: 32rpx;
    line-height: 45rpx;
}