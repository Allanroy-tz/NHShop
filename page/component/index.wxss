@import '../common/common.wxss';
.search{
    padding: 20rpx;
}
.search-text{
    display: flex;
    justify-content: center;
    align-items: center;
    height: 50rpx;
    color: #aaa;
    text-align: center;
    border: 1px solid #ddd;
    border-radius: 20rpx;
}
.search-text icon{
    margin-right: 10rpx;
}
swiper {
    height: 245rpx;
}
swiper-item image {
    width: 100%;
    height:100%;
}
.modal_new{
    width: 50%;
    height: 150px;
    position: fixed;
    top: 15%;
    left: 15%;
    z-index: 18;
  
  }
  .modal_new .close_btn{
    position: absolute;
    top: 0px;
    right: -60px;
    width: 40px;
    height: 40px;
    z-index: 1;
  }
  .new_shop_img{
    position: absolute;
    width: 222px;
  }
  .modal_{
    width: 100%;
    height: 100%;
    background: rgb(0,0,0);
    position: fixed;
    top: 0;
    z-index: 20;
    opacity: .6;
  }
  

.select-title,.newest-title{
    width: 100%;
    padding:30rpx 0;
    height: 40rpx;
    color: #850516;
    text-align: center;
}
.select-top-small{
    width: 375rpx;
    height: 375rpx;
    float: left;
}
.select-bottom,.select-top{
    width: 100%;
    height: 375rpx;
}
.select-top-small image,.select-bottom image,.select-top-small navigator,.select-bottom navigator{
    display: block;
    width: 100%;
    height: 100%;
}

.newest-box{
    padding:0 40rpx;
}
.newest-box .newest-list{
    display: inline-block;
    width: 320rpx;
    height: 340rpx;
    margin:0 20rpx 20rpx 0;
    border-radius: 10px;
    text-align: center;
    background: #ffffff;
    border: 1rpx solid #850516;
}
.newest-box .newest-list:nth-child(2n){
    margin-right: 0;
}
.newest-box .newest-list image{
    width: 220rpx;
    height: 220rpx;
    margin: 20rpx 0 10rpx;
}
.newest-box .newest-list .newest-text{
    font-size: 32rpx;
}