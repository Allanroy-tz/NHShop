@import '../common/common.wxss';
.main .bg{
  /* background: url("http://www.wtyz.vip/Nhimage/background.jpg");background-size:contain ; */
  background-repeat: no-repeat;
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: -10;
  
}
.customize{
    padding: 20rpx;
}
.customize-text{
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100rpx;
    color: rgba(255, 0, 0, 0.644);
    text-align: center;
    border: 1px solid rgba(255, 0, 0, 0.342);
    border-radius: 10rpx;
    background-color: rgb(255, 255, 255);
    font-size:30px;
}
.search-text icon{
    margin-right: 10rpx;
}
swiper-item image {
    width: 100%;
    height:100%;
}
.modal_new{
    width: 300px;
    height: 460px;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translateX(-50%) translateY(-50%);
    z-index: 18;
    background: url("http://www.wtyz.vip/Nhimage/001.jpg");
    background-size: cover;
    background-repeat: no-repeat;
  }
  .modal_new .close_btn{
    position: absolute;
    top: 2%;
    right: 2%;
    width: 40px;
    height: 40px;
    z-index: 1;
    background:url("http://www.wtyz.vip/Nhimage/close.png");
    background-size: cover;
  }
  .new_shop_img{
    position: absolute;
    width: 222px;
  }
  .modal_{
    width: 100%;
    height: 100%;
    background: rgb(0,0,0);
    position: fixed;
    top: 0;
    z-index: 10;
    opacity: .6;
  }
  

.select-title,.newest-title{
    width: 100%;
    padding:30rpx 0;
    height: 40rpx;
    color: #850516;
    text-align: center;
}
.select-top-small{
    width: 375rpx;
    height: 375rpx;
    float: left;
}
.select-bottom,.select-top{
    width: 100%;
    height: 375rpx;
}
.select-top-small image,.select-bottom image,.select-top-small navigator,.select-bottom navigator{
    display: block;
    width: 100%;
    height: 100%;
}

.newest-box{
    padding:0 40rpx;
}
.newest-box .newest-list{
    display: inline-block;
    width: 320rpx;
    height: 340rpx;
    margin:0 20rpx 20rpx 0;
    border-radius: 10px;
    text-align: center;
    background: #ffffff;
    border: 1rpx solid #850516;
}
.newest-box .newest-list:nth-child(2n){
    margin-right: 0;
}
.newest-box .newest-list image{
    width: 220rpx;
    height: 220rpx;
    margin: 20rpx 0 10rpx;
}
.newest-box .newest-list .newest-text{
    font-size: 32rpx;
}